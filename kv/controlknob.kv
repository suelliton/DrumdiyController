<controlknob>:
    orientation: 'vertical'
    id: control

    BoxLayout:

        orientation:"vertical"
        canvas.before:
            Color:
                rgba:.1,.1,.1,.3
            Rectangle:
                size:self.size
                pos:self.pos
        #Label:
        #    size_hint:(None,.5)
        Label:
            id:label_control
            text:"NOME"
            size_hint:(1,.3)
            color:(1,1,1,1)
            bold:True
            pos_hint: {'center_x': .5, 'center_y': .5}
            canvas.before:
                Color:
                    rgba:.1,.1,.1,.8
                Rectangle:
                    size:self.size
                    pos:self.pos
        BoxLayout:
            orientation: 'horizontal'
            size_hint:(1,.9)
            padding:10,0,0,0

            MyKnob:
                pos_hint: {'center_x': .3, 'center_y': .5}
                id:knob_control
                size: 55, 55
                max:127
                value: 0
                show_marker: True
                knobimg_source: "resources/icons/knob_prata_burned2.png"
                marker_img: "resources/icons/circulov.png"
                markeroff_color: 0, 0, 0, 1
                knobimg_size: .7
            BoxLayout:
                orientation:"vertical"
                padding:0,10,0,0
                Label:
                    size_hint:(1,.5)
                    color:(1,1,1,1)
                    bold:True
                    text: str(int(root.ids.knob_control.value))
                    font_size:20
                BoxLayout:
                    size_hint:(1,.5)
                    padding:0,0,5,10
                    spacing:5
                    
