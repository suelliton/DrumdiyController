#:import getTexture3 commons.getTexture3

<selected>:
    #id: box_controls_channels
    padding:10,0,10,10
    orientation:'vertical'
    size_hint_x:0.49
    canvas.before:
        Color:
            #rgba: (.69,.83,1,1)
            rgba: (.0,.0,.0,.5)#preto
        Line:
            width:1
            rectangle:self.x, self.y, self.width, self.height
    Label:
        text:"Selecionado"
        color:(0,0,0,1)
        size_hint:(1,None)
        size:(60,37)
        bold:True
        pos_hint: {'center_x': .5, 'center_y': .5}
    Label:
        id:name_channel
        text:"Nome Canal"
        color:(1,1,1,1)
        size_hint:(1,None)
        size:(60,25)
        bold:True
        pos_hint: {'center_x': .5, 'center_y': .2}
        canvas.before:
            Color:
                rgba:(.1,.1,.1,.8)
            Rectangle:
                pos : self.pos
                size : self.size

    BoxLayout:#box que engloba os controles e desenha a imagem background
        id:image_background_channel
        orientation:"vertical"
        padding:5 #para descolar o botao de delete do label do nome channel
        canvas:
            Rectangle:#desenha textura horizontal
                pos:self.pos
                size:self.size
                texture: getTexture3([100, 100, 200, 100],[100, 100, 150, 150],[50, 50, 150, 210],"h")
            Color:
                #rgba: .9, .9, .9, 1
                rgba: 0, 0, 0, .8
            Line:#borda
                width: 1
                rectangle: self.x, self.y, self.width, self.height


        BoxLayout:#BOX PRINCIPAL
            size_hint:(1,.9)
            orientation:"horizontal"

            BoxLayout:#BOX SPINNERS E BUTTON SAVE
                orientation:"vertical"
                size_hint:(.5,1)
                pos_hint: {'center_x': .5, 'center_y': .5}

                GridLayout:#GRID PARA OS SPINNERS DE PIN E MIDI
                    id:grid_controlspinners
                    padding:50
                    size_hint:(1,.3)
                    cols:1
                    pos_hint: {'center_x': .4, 'center_y': .5}
            BoxLayout:
                orientation:"vertical"
                size_hint:(.5,1)#TA QUASE COM METADE DA TELA HORIZONTALMENTE
                size:400,320
                GridLayout:#GRID DOS KNOBS
                    id:grid_controlknobs
                    size_hint:(1,.7)
                    cols: 2
                    rows:3
                    padding:15
                    spacing:10
                    pos_hint: {'center_x': .5, 'center_y': .5}
                ImageButton:
                    on_press:root.save()
                    source:"resources/icons/icons_save.png" if root.saved else "resources/icons/icons_no_save.png"
                    size_hint:(None,None)
                    size:(60,60)
                    pos_hint: {'center_x': .85, 'center_y': .5}
